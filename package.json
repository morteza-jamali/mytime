{
  "name": "@morajlab/mytime",
  "private": true,
  "version": "0.0.1",
  "description": "MyTime - Time management app",
  "repository": "https://github.com/morteza-jamali/mytime",
  "license": "MIT",
  "scripts": {
    "preinstall": "npm config set '@morajlab:registry' https://node.bit.dev",
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development vite",
    "build": "cross-env NODE_ENV=production vite build && npx workbox generateSW workbox-config.js",
    "cosmos": "cosmos",
    "cosmos:export": "cosmos-export",
    "postinstall": "cpy ./node_modules/framework7-icons/fonts/*.* ./src/fonts/",
    "format": "npm prettier --write .",
    "prepare": "husky install"
  },
  "keywords": [
    "mytime",
    "time",
    "timer",
    "react",
    "moraj",
    "morajlab",
    "framework7"
  ],
  "author": {
    "name": "Morteza Jamali",
    "email": "mortezajamali4241@gmail.com",
    "url": "https://moraj.ir"
  },
  "browserslist": [
    "Android >= 7",
    "IOS >= 11",
    "Safari >= 11",
    "Chrome >= 49",
    "Firefox >= 31",
    "Samsung >= 5"
  ],
  "dependencies": {
    "@morajlab/react.components.bare": "^0.0.111",
    "@morajlab/react.styles.common": "^0.0.1",
    "@morajlab/react.utils.style": "^0.0.111",
    "atropos": "^0.10.1",
    "dom7": "^3.0.0",
    "framework7": "^6.3.5",
    "framework7-icons": "^5.0.5",
    "framework7-react": "^6.3.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@morajlab/react.types.common": "^0.0.11",
    "@types/node": "^16.9.4",
    "@types/react": "^17.0.22",
    "@types/react-dom": "^17.0.9",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "commitlint": "^14.1.0",
    "cpy-cli": "^3.1.1",
    "cross-env": "^7.0.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.4.1",
    "react-cosmos": "^5.6.4",
    "sass": "^1.43.2",
    "vite": "^2.6.10",
    "workbox-cli": "^6.3.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
